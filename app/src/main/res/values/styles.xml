<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_color_secondary</item>
        <item name="hintTextColor">@color/text_color_secondary</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:state_focused">true</item>
    </style>

    <style name="MyTextInputLayoutSearch" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_color_secondary</item>
        <item name="hintTextColor">@color/text_color_secondary</item>
        <item name="android:textColor">@color/text_color_secondary</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>