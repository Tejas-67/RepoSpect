<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:paddingTop="12sp"
        android:layout_height="wrap_content"
        android:background="@color/primary_dark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="40sp"
                android:layout_height="40sp"
                app:shapeAppearanceOverlay="@style/ImageView.Circle"
                android:layout_marginEnd="0sp"
                android:src="@drawable/no_profile_logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repospect"
                android:textSize="20sp"
                android:layout_marginStart="4sp"
                android:layout_marginTop="0sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/heading_font"
                android:textStyle="bold" />
        </LinearLayout>
        <androidx.appcompat.widget.ActionMenuView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <com.google.android.material.imageview.ShapeableImageView
                    app:tint="@color/text_color_secondary"
                    app:shapeAppearanceOverlay="@style/ImageView.Circle"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:id="@+id/search"
                    android:layout_marginTop="2sp"
                    android:layout_marginEnd="10sp"
                    android:src="@drawable/ic_search" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    app:shapeAppearanceOverlay="@style/ImageView.Circle"
                    android:id="@+id/profile_pic"
                    android:src="@color/white" />
            </LinearLayout>

            <!-- Replace with your actual profile icon -->
        </androidx.appcompat.widget.ActionMenuView>
    </androidx.appcompat.widget.Toolbar>
</androidx.constraintlayout.widget.ConstraintLayout>

